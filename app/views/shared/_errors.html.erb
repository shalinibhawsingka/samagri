<% if obj.errors.any? %>
  <div class="panel panel-danger">
    <div class="panel-heading">
      <h5 class="panel-title">
        <%= pluralize(obj.errors.count, "error") %>
        prohibited this from being saved
      </h5>
      <div class="panel-body">
        <ul>
          <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>