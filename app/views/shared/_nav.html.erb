<div class="row">
  <div class="container-fluid space">
    <nav class="navbar navbar-expand-sm bg-dark">
      <%= link_to "Inventory", show_path, class: "navbar-brand logo" %>
      <div class="collapse navbar-collapse justify-content-end">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Users", users_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Categories", categories_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Brands", brands_path, class: "nav-link" %>
          </li>

          <!-- Dropdown -->
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
              More
            </a>
            <div class="dropdown-menu">
              <%= link_to "Employees", employees_path, class: "dropdown-item" %>
              <%= link_to "Items", items_path, class: "dropdown-item" %>
              <%= link_to "Issues", issues_path, class: "dropdown-item" %>
              <%= link_to "Storage", storage_index_path, class: "dropdown-item" %>
            </div>
          </li>

          <li class="nav-item dropdown">
            <% if current_user.is_admin? %>
              <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                Notification (<b class="notifications-count">0</b>)
              </a>
              <div class="dropdown-menu" id="notification">
                <% Notification.all.each do |notification| %>
                  <a class="dropdown-item <%= notification.priority == true ? 'high_class' : 'low_class' %>" href="#"><%= notification.name %></a>
                <% end %>
              </div>
            <% end %>
          </li>

          <li class="nav-item dropdown">
          <a class="fas fa-user nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
            <%= current_user.name %>
          </a>
          <div class="dropdown-menu">
            <%= link_to "Logout", logout_path, class: "dropdown-item" %>
          </div>
        </li>
          
        </ul>
      </div>
    </nav>
  </div>
</div>