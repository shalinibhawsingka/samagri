<%= render "shared/nav" %>
<div class="container">
  <h2>Categories</h2>

  <div class = "row">
      <div class = "col-sm-6">
        <%= will_paginate @categories,renderer: BootstrapPagination::Rails %>
      </div>
      <div class = "col-sm-6">
        <% if current_user.is_admin == true %>
          <%= link_to ("Add"), new_category_path, class: "btn btn-primary add" %>
        <% end %>
      </div>
    </div>

  <table class = "table table-bordered">
    <thead>
      <tr class="bg-info">
        <th>Name</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |c| %>
        <tr>
          <td><%= c.name %></td>
          <% if current_user.is_admin == true %>
            <td><%= link_to ("<span class='glyphicon glyphicon-edit'></span>".html_safe), edit_category_path(c) %></td>
            <td><%= link_to "<span class='glyphicon glyphicon-remove'></span>".html_safe, category_path(c), method: :delete, data: { confirm: "Are you sure?" } %></td>
          <% end %>  
        </tr>
      <% end %>
    </tbody>
  </table>

</div>