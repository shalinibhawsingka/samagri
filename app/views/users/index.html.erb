<%= render "shared/nav" %>
<div class="container">

<h2>Users</h2>

<div class = "row">
  <div class = "col-sm-6">
    <%= will_paginate @users,renderer: BootstrapPagination::Rails %>
  </div>
  <div class = "col-sm-6">
    <% if current_user.is_admin == true %>
      <%= link_to ("Add"), new_user_path, class: "btn btn-primary add" %>
    <% end %>
  </div>
</div>

<table class = "table table-bordered">
  <thead>
    <tr class="bg-info">
      <th>Name</th>
      <th>Email</th>
      <th>Admin</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.is_admin %></td>
        <% if current_user.is_admin == true && user == current_user %>
          <td><%= link_to ("<span class='glyphicon glyphicon-edit'></span>".html_safe), edit_user_path(user) %></td>
        <% end %>
        <% if current_user.is_admin == true && user.is_admin == false %>
          <td><%= link_to ("<span class='glyphicon glyphicon-edit'></span>".html_safe), edit_user_path(user) %></td>
          <td><%= link_to "<span class='glyphicon glyphicon-remove'></span>".html_safe, user_path(user), method: :delete, data: { confirm: "Are you sure?" } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

</div>