<div class="container">
<%= render "shared/errors", obj: @employee %>
  <%= bootstrap_form_for(@employee) do |f| %>
    <%= f.text_field :name, label: "Name :" %><br />
    <%= f.email_field :email, label: "Email :" %><br />
    <%= f.check_box :status, label: "Active?" %><br />
    <%= f.submit %>
  <% end %>
</div>